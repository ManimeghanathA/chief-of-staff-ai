# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)

aws_region = "us-east-1"
project_name = "chief-of-staff-ai"

# Database Configuration
db_name = "chiefofstaff"
db_username = "admin"
db_password = "CHANGE_THIS_TO_SECURE_PASSWORD" # Use a strong password!

# RDS Instance Class (db.t3.micro is free tier eligible)
rds_instance_class = "db.t3.micro"

# ECS Configuration
ecs_cpu = 512          # 0.5 vCPU
ecs_memory = 1024      # 1 GB RAM
ecs_desired_count = 1  # Number of tasks

# Google OAuth Credentials
google_client_id = "YOUR_GOOGLE_CLIENT_ID"
google_client_secret = "YOUR_GOOGLE_CLIENT_SECRET"
google_api_key = "YOUR_GOOGLE_API_KEY"
